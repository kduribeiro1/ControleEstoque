<Window x:Class="ControleEstoque.TiposUndsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleEstoque"
        mc:Ignorable="d"
        Title="Tipos de Unidades" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Tipos de Unidades" FontWeight="Bold" FontSize="16" Grid.Column="0" VerticalContentAlignment="Center" />
            <Label Content="Filtrar por nome:"  FontSize="14" Grid.Column="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
            <TextBox x:Name="txtFiltroNome" Grid.Column="4" VerticalContentAlignment="Center" FontSize="14" />
        </Grid>
        <Grid Grid.Column="1" Grid.Row="3">
            <ListView x:Name="lstTiposUnidades">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Id" Width="60" DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn Header="Nome" DisplayMemberBinding="{Binding Nome}" />
                        <GridViewColumn Header="Quantidade Mínima" Width="150" DisplayMemberBinding="{Binding QuantidadeMinima}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnNovo" Content="Novo" Grid.Column="0" Click="BtnNovo_Click"/>
            <Button x:Name="btnEditar" Content="Editar" Grid.Column="2" Click="BtnEditar_Click" />
            <Button x:Name="btnRemover" Content="Deletar" Grid.Column="4" Click="BtnDeletar_Click"/>
            <Button x:Name="btnAtualizar" Content="Atualizar" Grid.Column="6" Click="BtnAtualizar_Click"/>
            <!--<Button x:Name="btnImportar" Content="Importar" Grid.Column="8" Click="BtnImportar_Click"/>-->
            <Button x:Name="btnExportar" Content="Exportar" Grid.Column="10" Click="BtnExportar_Click"/>
        </Grid>
    </Grid>
</Window>
