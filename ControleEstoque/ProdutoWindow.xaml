<Window x:Class="ControleEstoque.ProdutoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleEstoque"
        mc:Ignorable="d"
        Title="Produto" Height="450" MinHeight="400" Width="650" MinWidth="550" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="55" />
            <RowDefinition Height="5" />
            <RowDefinition Height="55" />
            <RowDefinition Height="5" />
            <RowDefinition Height="55" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="30" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Label x:Name="lblTitulo" Content="Cadastro de Produto" FontWeight="Bold" FontSize="16" Margin="5" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"/>

        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Nome:" Grid.Row="0" VerticalAlignment="Center" />
            <TextBox x:Name="txtNome" Grid.Row="1" VerticalContentAlignment="Center" />
        </Grid>

        <Grid Grid.Column="3" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Unidade:" Grid.Row="0" VerticalAlignment="Center" />
            <ComboBox x:Name="cbUnidade" DisplayMemberPath="Nome" SelectedValuePath="Id" Grid.Row="1" VerticalContentAlignment="Center" />
        </Grid>

        <Grid Grid.Column="1" Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Preço Unidade:" Grid.Row="0" VerticalAlignment="Center" />
            <TextBox x:Name="txtPrecoUnidade" Grid.Row="1" PreviewTextInput="TxtPrecoUnidade_PreviewTextInput" VerticalContentAlignment="Center" />
        </Grid>

        <Grid Grid.Column="3" Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Quantidade Total:" Grid.Row="0" VerticalAlignment="Center" />
            <Label x:Name="lblQuantidadeTotal" Grid.Row="1" VerticalContentAlignment="Center" />
        </Grid>

        <Grid Grid.Column="1" Grid.Row="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Ativo:" Grid.Row="0" VerticalAlignment="Center" />
            <CheckBox x:Name="chkAtivo" Grid.Row="1" />
        </Grid>

        <Grid Grid.Column="3" Grid.Row="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Data de Alteração:" Grid.Row="0" VerticalAlignment="Center" />
            <Label x:Name="lblAlteracao" Grid.Row="1" VerticalContentAlignment="Center" />
        </Grid>
        <Grid Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="9">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Descrição:" Grid.Row="0" VerticalAlignment="Center" />
            <TextBox x:Name="txtDescricao" AcceptsReturn="True" Grid.Row="1" />
        </Grid>
        <Button x:Name="btnFechar" Content="Fechar" Grid.Column="1" Grid.Row="11" Click="BtnFechar_Click"/>
        <Button x:Name="btnSalvar" Content="Salvar" Grid.Column="3" Grid.Row="11" Click="BtnSalvar_Click"/>
    </Grid>
</Window>
