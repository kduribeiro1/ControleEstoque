<Window x:Name="window" x:Class="ControleEstoque.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControleEstoque"
        mc:Ignorable="d"
        Title="Controle Estoque" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:QuantidadeAlertaConverter x:Key="QuantidadeAlertaConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="40" />
            <RowDefinition Height="5" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="30" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" Grid.Row="1">
            <TabControl x:Name="tabFornecedores" SelectionChanged="TabFornecedores_SelectionChanged" BorderBrush="{x:Null}">
                <!-- As abas serão geradas dinamicamente no code-behind -->
            </TabControl>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnProdutos" Content="Produtos" Grid.Column="0" Click="BtnProdutos_Click" />
            <Button x:Name="btnFornecedores" Content="Fornecedores" Grid.Column="2" Click="BtnFornecedores_Click" />
            <Button x:Name="btnTipos" Content="Tipos de Unidades" Grid.Column="4" Height="40" VerticalAlignment="Top" Click="BtnTipos_Click" />
            <Button x:Name="btnEstoque" Content="Historico de Estoque" Grid.Column="6" Click="BtnEstoque_Click" />
            <Button x:Name="btnEntSaidEstoque" Content="Entrada/Saída Estoque" Grid.Column="8" Click="BtnEntSaidEstoque_Click" />
        </Grid>
        <Grid Grid.Column="1" Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="Produtos com estoque baixo:" FontWeight="Bold" FontSize="16" Grid.Row="0" VerticalContentAlignment="Bottom" />
            <Grid Grid.Row="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ListView Name="listViewProdutosAcabando" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="7">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Style.Triggers>
                                <!-- Vermelho -->
                                <DataTrigger Value="2">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource QuantidadeAlertaConverter}">
                                            <Binding Path="QuantidadeTotal"/>
                                            <Binding Path="QuantidadeMinima"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <Setter Property="Foreground" Value="#FFDA0000"/>
                                </DataTrigger>
                                <!-- Amarelo -->
                                <DataTrigger Value="1">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource QuantidadeAlertaConverter}">
                                            <Binding Path="QuantidadeTotal"/>
                                            <Binding Path="QuantidadeMinima"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <Setter Property="Foreground" Value="#FFE89600"/>
                                </DataTrigger>
                                <!-- Normal -->
                                <DataTrigger Value="0">
                                    <DataTrigger.Binding>
                                        <MultiBinding Converter="{StaticResource QuantidadeAlertaConverter}">
                                            <Binding Path="QuantidadeTotal"/>
                                            <Binding Path="QuantidadeMinima"/>
                                        </MultiBinding>
                                    </DataTrigger.Binding>
                                    <Setter Property="Foreground" Value="Black"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Modelo" DisplayMemberBinding="{Binding Modelo}" Width="150"/>
                            <GridViewColumn Header="Cód." DisplayMemberBinding="{Binding Codigo}" Width="100"/>
                            <GridViewColumn Header="Fio" DisplayMemberBinding="{Binding Fio}" Width="100"/>
                            <GridViewColumn Header="Milímetros" DisplayMemberBinding="{Binding Milimetros}" Width="100"/>
                            <GridViewColumn Header="Tamanho" DisplayMemberBinding="{Binding Tamanho}" Width="100"/>
                            <GridViewColumn Header="Fornecedor" DisplayMemberBinding="{Binding FornecedorNome}" Width="150"/>
                            <GridViewColumn Header="Unidade" DisplayMemberBinding="{Binding TipoUnidadeNome}" Width="100"/>
                            <GridViewColumn Header="Quantidade" DisplayMemberBinding="{Binding QuantidadeTotal}" Width="80"/>
                            <GridViewColumn Header="Qtde Mínima" DisplayMemberBinding="{Binding QuantidadeMinima}" Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Label Content="Legenda:" Grid.Row="2" Grid.Column="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
                <Grid Grid.Row="2" Grid.Column="2" ToolTip="Possui estoque acima de 15% para atingir a quantidade mínima definida">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Column="0" Grid.Row="1" Fill="Black" RadiusX="2" RadiusY="2" ToolTip="Possui estoque acima de 15% para atingir a quantidade mínima definida"/>
                    <TextBlock Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Text="Possui estoque disponível" ToolTip="Possui estoque acima de 15% para atingir a quantidade mínima definida" VerticalAlignment="Center" Foreground="Black" TextTrimming="CharacterEllipsis"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="4" ToolTip="Falta 15% ou menos para atingir a quantidade mínima definida">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Column="0" Grid.Row="1" Fill="#FFE89600" RadiusX="2" RadiusY="2" ToolTip="Falta 15% ou menos para atingir a quantidade mínima definida"/>
                    <TextBlock Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Text="Próximo da quantidade mínima" ToolTip="Falta 15% ou menos para atingir a quantidade mínima definida" VerticalAlignment="Center" Foreground="#FFE89600" TextTrimming="CharacterEllipsis"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="6" ToolTip="O estoque atingiu ou está abaixo da quantidade mínima definida">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="6" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Column="0" Grid.Row="1" Fill="#FFDA0000" RadiusX="2" RadiusY="2" ToolTip="O estoque atingiu ou está abaixo da quantidade mínima definida"/>
                    <TextBlock Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Text="Quantidade mínima atingida" ToolTip="O estoque atingiu ou está abaixo da quantidade mínima definida" VerticalAlignment="Center" Foreground="#FFDA0000" TextTrimming="CharacterEllipsis"/>
                </Grid>
                <Label x:Name="txtQtdeProdutos" Content="Quantidade de Produtos: " Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" VerticalContentAlignment="Center" />
                <Button x:Name="btnAtualizarProdutos" Content="Atualizar Produtos" Click="BtnAtualizarProdutos_Click" Grid.Row="4" Grid.Column="4" />
                <Button x:Name="btnExportarProdutos" Content="Exportar Produtos" Click="BtnExportarProdutos_Click" Grid.Row="4" Grid.Column="6" />
            </Grid>
        </Grid>
        <StatusBar x:Name="SttBarDataHora" Grid.Column="1" Grid.Row="7">
            <StatusBarItem Width="100" Margin="10,0,5,0">
                <TextBlock x:Name="txtHora" />
            </StatusBarItem>
            <StatusBarItem Width="300" Margin="5,0,5,0">
                <TextBlock x:Name="txtData" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right" Margin="0,0,10,0">
                <TextBlock x:Name="txtKRDG" Text="KRDG" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
